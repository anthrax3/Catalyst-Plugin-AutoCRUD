    // toolkit for checkbox cols
    var CheckTable = new Array();
    [% FOREACH col IN cpac.main.cols.keys %]
      [% NEXT UNLESS cpac.main.cols.$col.extjs_xtype == 'checkbox' %]
      CheckTable['[% col %]'] = 1;
    [% END %]
    function isCheck (c) {
        return !! CheckTable[c];
    }

    // toolkit for checking for foreign keys
    var FKTable = new Array();
    [% FOREACH col IN cpac.main.cols.keys %]
      [% NEXT UNLESS cpac.main.cols.$col.is_fk OR cpac.main.cols.$col.is_rr %]
      FKTable['[% col %]'] = 1;
    [% END %]
    function isFK (c) {
        return !! FKTable[c];
    }
